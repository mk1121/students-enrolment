{
  "name": "students-enrollment-system",
  "version": "1.0.0",
  "description": "Students Online Enrollment System with Payment Gateways using MERN Stack",
  "main": "server.js",
  "scripts": {
    "start": "bun run server.js",
    "server": "bun run --watch server.js",
    "client": "cd client && bun start",
    "dev": "concurrently \"bun run server\" \"bun run client\"",
    "install-client": "cd client && bun install",
    "build": "cd client && bun run build",
    "heroku-postbuild": "bun run install-client && bun run build",
    "lint": "eslint server/ --ext .js",
    "lint:fix": "eslint server/ --ext .js --fix",
    "format": "prettier --write \"server/**/*.js\" \"*.js\"",
    "format:check": "prettier --check \"server/**/*.js\" \"*.js\"",
    "test:backend": "bun test --config jest.config.js",
    "test:coverage": "bun test --config jest.config.js --coverage",
    "test:frontend": "cd client && bun test",
    "test:all": "bun run test:backend && bun run test:frontend",
    "ci:test": "bun run lint && bun run format:check && bun run test:all",
    "ci:build": "bun run ci:test && bun run build",
    "audit:backend": "bun audit",
    "audit:frontend": "cd client && bun audit",
    "migrate": "bun run migrate.js",
    "migrate:status": "bun run migrate.js status",
    "migrate:rollback": "bun run migrate.js rollback",
    "health:check": "curl -f http://localhost:5001/api/health || echo 'Health check failed'"
  },
  "keywords": [
    "mern",
    "react",
    "node",
    "mongodb",
    "express",
    "enrollment",
    "payment"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "sslcommerz-lts": "^1.1.0",
    "stripe": "^13.5.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "concurrently": "^8.2.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3"
  }
}
