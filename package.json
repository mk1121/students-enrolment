{
  "name": "students-enrollment-system",
  "version": "1.0.0",
  "description": "Students Online Enrollment System with Payment Gateways using MERN Stack",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-client": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run install-client && npm run build",
    "lint": "eslint server/ --ext .js",
    "lint:fix": "eslint server/ --ext .js --fix",
    "format": "prettier --write \"server/**/*.js\" \"*.js\"",
    "format:check": "prettier --check \"server/**/*.js\" \"*.js\"",
    "test:backend": "jest --config jest.config.js",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:frontend": "cd client && npm test",
    "test:all": "npm run test:backend && npm run test:frontend",
    "ci:test": "npm run lint && npm run format:check && npm run test:all",
    "ci:build": "npm run ci:test && npm run build",
    "audit:backend": "npm audit --audit-level=high",
    "audit:frontend": "cd client && npm audit --audit-level=high",
    "migrate": "node migrate.js",
    "migrate:status": "node migrate.js status",
    "migrate:rollback": "node migrate.js rollback",
    "health:check": "curl -f http://localhost:5001/api/health || echo 'Health check failed'"
  },
  "keywords": [
    "mern",
    "react",
    "node",
    "mongodb",
    "express",
    "enrollment",
    "payment"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "react-scripts": "^5.0.1",
    "sslcommerz-lts": "^1.1.0",
    "stripe": "^13.5.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "concurrently": "^8.2.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3"
  }
}
