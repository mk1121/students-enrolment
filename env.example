# Server Configuration
NODE_ENV=development
PORT=5001

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/students-enrollment

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# Client URL (for CORS and email links)
CLIENT_URL=http://localhost:3000

# Email Configuration (OAuth 2.0 - Recommended)
EMAIL_USER=your-email@gmail.com
EMAIL_FROM=noreply@yourdomain.com

# Gmail OAuth 2.0 Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/
GMAIL_CLIENT_ID=your-gmail-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REFRESH_TOKEN=your-gmail-refresh-token

# Alternative: Basic Email Configuration (Less Secure - Not Recommended)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# SSLCommerz Configuration (Bangladesh Payment Gateway)
SSLCZ_STORE_ID=your_store_id_here
SSLCZ_STORE_PASSWD=your_store_password_here
SSLCZ_IS_LIVE=false

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Optional: PayPal Configuration (if using PayPal)
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100 